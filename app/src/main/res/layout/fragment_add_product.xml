<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <EditText
        android:id="@+id/productNameInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ürün Adı"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/productPriceInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Fiyat"
        app:layout_constraintTop_toBottomOf="@id/productNameInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/productDescriptionInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ürün Açıklaması"
        app:layout_constraintTop_toBottomOf="@id/productPriceInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/productCountInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Stok Adedi"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/productDescriptionInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/productImageUrlInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Görsel URL"
        app:layout_constraintTop_toBottomOf="@id/productCountInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/addProductButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ürün Ekle"
        app:layout_constraintTop_toBottomOf="@id/productImageUrlInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
